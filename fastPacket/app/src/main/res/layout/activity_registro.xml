<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="45dp"
    android:background="#D3D3D3"
    android:gravity="center_horizontal"
    tools:context=".registro">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textColor="#45a049"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"/>

    <EditText
        android:id="@+id/editTextNumeroDePersonal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:hint="Número de personal"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/rounded_border"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d"
        android:padding="12dp"
        android:background="@drawable/rounded_border" />

    <EditText
        android:id="@+id/etApPaterno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Apellido Paterno"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d"
        android:padding="12dp"
        android:background="@drawable/rounded_border" />

    <EditText
        android:id="@+id/etApMaterno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Apellido Materno"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d"
        android:padding="12dp"
        android:background="@drawable/rounded_border" />

    <EditText
        android:id="@+id/etContrasenia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/rounded_border"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:backgroundTint="#45a049"
        android:cornerRadius="40dp"
        android:elevation="4dp"
        android:text="Registrarme"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="registro"/>

</LinearLayout>