<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="#595656"
    android:gravity="center_horizontal"
    tools:context=".login">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio de sesión"
        android:textColor="#45a049"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="Logo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/LOGO"/>

    <EditText
        android:id="@+id/etNumeroPersonal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:hint="Número de personal"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/rounded_border"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d" />

    <EditText
        android:id="@+id/etContrasenia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_border"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#1b2a47"
        android:textColorHint="#7d7f7d" />

    <TextView
        android:id="@+id/tvNoTengoCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="No tengo cuenta"
        android:textColor="#45a049"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:textSize="16sp"
        android:onClick="abrirRegistro"/>


    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:backgroundTint="#45a049"
        android:layout_marginBottom="26dp"
        android:cornerRadius="25dp"
        android:elevation="4dp"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvOlvideContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidé mi contraseña"
        android:textColor="#45a049"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:textSize="16sp"
        android:onClick="abrirRecuperarContrasena"/>

</LinearLayout>
